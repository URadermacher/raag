select r.name, 
	   i.name,
	   a.firstname,
	   a.lastname
from performance p
join raga r on r.id = p.ragaid
join performanceartist pa on pa.artistid = p.artistid and pa.storeid = p.storeid
join instrument i on i.id = pa.instrumentid
join artist ar on a.id = pa.artistid
where i.name = 'Sitar'
--  and r.name = 'Jhinjhoti'